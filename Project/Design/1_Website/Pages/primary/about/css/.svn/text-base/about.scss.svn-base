/** NEWS CSS ******************************************************************/
 @import 'C:/WORKSPACE/avior/Project/Design/1_Website/Main_Layout/css/global';
#about_content_wrapper {
  padding:20px 0px; 
} 
.topSection {
  text-align:center;
  margin-bottom:45px;
  width:800px;
  margin:0 auto;
  h1 { 
    font-size:4.4em; 
    margin-bottom:20px;
  } 
}

.bottomSection {
  width:800px;
  margin:50px auto 50px auto;
  div {
    .aboutAvior {
      height:auto;
      width:178px;
      float:left;
      display:block;
      position:relative;
      cursor:pointer;
      margin-right:28px;
        .topPointer {
          color:#fff;
          font-size:2.1em;
          height:29px;
          width:100%;
          background-image:url('/Project/Design/1_Website/Pages/primary/about/images/about-us-pointer.png');
          padding-left:10px;
        }
        img {
          width:100%;
          height:168px;
        }
    }
    .last {
      margin-right:0;
    }
  }
}
