/** NEWS CSS ******************************************************************/
.sprite {
  border: none;
  display: inline-block;
  vertical-align: middle;
  background-repeat: no-repeat;
  background-color: transparent; }

#about_content_wrapper {
  padding: 20px 0px; }

.topSection {
  text-align: center;
  margin-bottom: 45px;
  width: 800px;
  margin: 0 auto; }
  .topSection h1 {
    font-size: 4.4em;
    margin-bottom: 20px; }

.bottomSection {
  width: 800px;
  margin: 50px auto 50px auto; }
  .bottomSection div .aboutAvior {
    height: auto;
    width: 178px;
    float: left;
    display: block;
    position: relative;
    cursor: pointer;
    margin-right: 28px; }
    .bottomSection div .aboutAvior .topPointer {
      color: #fff;
      font-size: 2.1em;
      height: 29px;
      width: 100%;
      background-image: url("/Project/Design/1_Website/Pages/primary/about/images/about-us-pointer.png");
      padding-left: 10px; }
    .bottomSection div .aboutAvior img {
      width: 100%;
      height: 168px; }
  .bottomSection div .last {
    margin-right: 0; }
