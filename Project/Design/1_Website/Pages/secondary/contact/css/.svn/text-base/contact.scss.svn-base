/** CONTACT CSS ******************************************************************/
@import 'C:/WORKSPACE/avior/Project/Design/1_Website/Main_Layout/css/global';

.contactUsWrapper {
  width:775px;
  margin:30px auto;  
  b { font-size:1.4em; }
  p { font-size:1.2em; } 
  
  .leftContent {
    width:180px;
    height:575px;
    h2 { margin-bottom:7px; }
    p {line-height:20px !important; margin-bottom:0px; }
    a { color:#23A9E0; font-size:1.2em; } 
  }
  .rightContent {
    width:440px;
    min-height:575px;  
    h2 {
      font-size:3.0em;
    }    
    .contactForm {
      margin-top:20px;
      clear:both;
      .row {
        margin-bottom:14px;
        position:relative;
          input[type="text"], select, input[type="email"], textarea, input[type="file"] {
            width:100%;
            height:33px;
            padding-left:5px;
            border:1px solid #ccc;
            font-size:1.4em;
          }
          textarea {
            height:210px;
          }       
          input[type="submit"] {
            margin-top:5px;
            width:95px;
            height:32px;
            background-color:#222222;
            font-size:1.8em;
            color:#fff;
          }
          //ERROR MESSAGE
          label.error {
            color: #A11D24;
            font-size:1.2em;
            position: absolute;
            right:5px;
            top:10px;          
          }          
      }
    }
  }
}
