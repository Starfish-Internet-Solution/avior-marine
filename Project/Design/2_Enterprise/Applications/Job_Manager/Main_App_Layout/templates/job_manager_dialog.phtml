<!--- ADD JOB ---->
<div class="addJobDialog popupDialog">
	<h3>
		<img src="/Project/Design/2_Enterprise/Applications/Products/Main_App_Layout/images/plus.png" />
		Add Job
	</h3>
	<form method="post" action="/job-manager/job-manager/add">
		<div>
			<div class="mBm clearfix">
				<strong>Title</strong>
				<input class="validate[required,maxlength[45]] fright" type="text" name="title" maxlength="45">
			</div>
			<div class="clearfix">
				<strong>Description</strong>
				<textarea name="description" class="fright"></textarea>
			</div>
		</div> 
		<div id="button_container" class="fright mBs">
			<input type="submit" class="sprite fleft mRs mTs" name="add_job" value=" ">
			<span class="sprite mTs fleft pointer closeDialog" title="cancel"></span>		
		</div>
	</form>
</div>
